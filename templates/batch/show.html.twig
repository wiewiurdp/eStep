{% extends 'base.html.twig' %}

{% block title %}Batch{% endblock %}

{% block body %}
    <h1>Batch</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ batch.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ batch.name }}</td>
        </tr>
        <tr>
            <th>Users</th>
            {% for user in batch.users %}
                <td>{{ user.name }} {{ user.surname }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Roles</th>
            {% for role in batch.roles %}
                <td>{{ role.name }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Bookings</th>
            {% for booking in batch.bookings %}
                <td>{{ booking.summary }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('batch_index') }}">back to list</a>

    <a href="{{ path('batch_edit', {'id': batch.id}) }}">edit</a>

    {{ include('batch/_delete_form.html.twig') }}
{% endblock %}
