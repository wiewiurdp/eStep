{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ user.surname }}</td>
        </tr>
        <tr>
            <th>Mail</th>
            <td>{{ user.mail }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>Batches</th>
            {% for batch in user.batches %}
                <td>{{ batch.name }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Roles</th>
            {% for role in user.roles %}
                <td>{{ role.name }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Booings</th>
            {% for booking in user.bookings %}
                <td>{{ booking.summary }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
