{% extends 'base.html.twig' %}

{% block title %}Attendee{% endblock %}

{% block body %}
    <h1>Attendee</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ attendee.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ attendee.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ attendee.surname }}</td>
        </tr>
        <tr>
            <th>Mail</th>
            <td>{{ attendee.mail }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ attendee.address }}</td>
        </tr>
        <tr>
            <th>Batches</th>
            {% for batch in attendee.batches %}
                <td>{{ batch.name }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Roles</th>
            {% for role in attendee.roles %}
                <td>{{ role.name }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Booings</th>
            {% for booking in attendee.bookings %}
                <td>{{ booking.summary }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('attendee_index') }}">back to list</a>

    <a href="{{ path('attendee_edit', {'id': attendee.id}) }}">edit</a>

    {{ include('attendee/_delete_form.html.twig') }}
{% endblock %}
