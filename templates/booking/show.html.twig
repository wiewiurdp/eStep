{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Summary</th>
            <td>{{ booking.summary }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ booking.description }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ booking.start ? booking.start|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>End</th>
            <td>{{ booking.end ? booking.end|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ booking.location }}</td>
        </tr>
        <tr>
            <th>Recurrence</th>
            <td>{{ booking.recurrence }}</td>
        </tr>
        <tr>
            <th>Attendees</th>
            {% for attendee in booking.attendees %}
            <td>{{attendee.name}} {{attendee.surname}}</td>
            {% endfor %}
        </tr>

        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
