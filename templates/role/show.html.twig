{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Batches</th>
                <td>{{ role.batches }}</td>
            </tr>
            <tr>
                <th>Users</th>
                {% for user in role.users %}
                    <td>{{ user.name }} {{ user.surname }} |</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('role_index') }}">back to list</a>

    <a href="{{ path('role_edit', {'id': role.id}) }}">edit</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
